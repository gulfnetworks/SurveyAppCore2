                $(window).scrollTop($("#ambienceGroup").offset().top - 100);
                return;
            }



            isValid = false;
            //SET LAST VISIT ==========================================================================
            $('#visitGroup input:radio').each(function () {
                if ($(this).prop("checked")) {
                    SurveyObject.LastVisitComment = $(this).text();
                    if ($(this).val() == ">6") {
                        SurveyObject.LastVisit = 99;
                    } else {
                        SurveyObject.LastVisit = $(this).val();
                    }

                    isValid = true;


                $("#validationQuality").show();
                $(window).scrollTop($("#qualityGroup").offset().top - 100);
                return;
            }



            isValid = false;
            //SET SERVICE ==========================================================================
            $('#serviceGroup input:radio').each(function () {
                if ($(this).prop("checked")) {
                    SurveyObject.ServiceRate = $(this).val();
                    if ($(this).val() > 4) { SurveyObject.ServiceComment = $("#txtService2").val(); }
                    else { SurveyObject.ServiceComment = $("#txtService1").val(); }
                    isValid = true;


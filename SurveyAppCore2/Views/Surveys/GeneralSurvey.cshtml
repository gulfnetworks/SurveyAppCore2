    <script type="text/javascript">
        function toProperCase(text) {
            return text.toUpperCase().substr(0, 1) + text.toLowerCase().substr(1, $(this).len);
        }
        // new code2
        function SendThankYouEmail(settingsId,email) {
  
            var tmpObject = {
                "SettingsId": 0
                , "Email": ''

            }
            tmpObject.SettingsId = parseInt(settingsId);
            tmpObject.Email = email;


            $.ajax({
                url: '/api/SendThankyouEmail',
                type: "POST",
                dataType: 'json',
                contentType: "application/json",
                data: JSON.stringify(tmpObject),
                success: function (data) {
                       if (typeof window != 'undefined') {

                        window.location.href = "/Surveys/ThankYou?Code=@ViewData["Code"]&Company=@ViewData["Company"]";

                    }
                    else {

                        document.location.href = "/Surveys/ThankYou?Code=@ViewData["Code"]&Company=@ViewData["Company"]";
                    }
                }
            });

        }

        function SaveSurvey() {
            $("#validationValue").hide();
            $("#validationQuality").hide();
            $("#validationVisit").hide();
            $("#validationAmbience").hide();
            $("#validationService").hide();
            $("#validationRecommend").hide();
            var id = parseInt(@ViewData["LastSurveyId"]);


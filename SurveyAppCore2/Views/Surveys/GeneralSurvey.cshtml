            });


            //if (!isValid) { $("#validationService").show(); return; }

            if (!isValid) {
                $("#validationService").show();
                $(window).scrollTop($("#serviceGroup").offset().top - 100);
                return;
            }



             isValid = false;

            //SET AMBIENCE =======================================================================
            $('#ambienceGroup input:radio').each(function () {
                if ($(this).prop("checked")) {
                    SurveyObject.AmbienceRate = $(this).val();
                    if ($(this).val() > 4) { SurveyObject.AmbienceComment = $("#txtAmbience2").val(); }
                    else { SurveyObject.AmbienceComment = $("#txtAmbience1").val(); }
                    isValid = true;


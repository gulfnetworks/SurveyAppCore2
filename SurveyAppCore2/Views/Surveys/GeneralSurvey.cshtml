                "SurveyId": id
                        ,"QualityRate": ''
                        ,"QualityComment": ''
                        ,"ValueRate": 0
                        ,"ValueComment": ''
                        , "ServiceRate": 0
                        ,"ServiceComment": ''
                        , "AmbienceRate": 0
                        ,"AmbienceComment": ''
                        , "RecommendRate": 0
                        ,"RecommendPoorArea": ''
                        , "RecommendImprovements": ''
                        , "RecommendSuggestions": ''
                        , "Status": ''
                        ,"Action" : ''

            }






            isValid = false;
            //SET VALUE ==========================================================================
            $('#valueGroup input:radio').each(function () {
                if ($(this).prop("checked")) {
                    SurveyObject.ValueRate = $(this).val();
                    if ($(this).val() > 4) { SurveyObject.ValueComment = $("#txtValue2").val(); }
                    else { SurveyObject.ValueComment = $("#txtValue1").val(); }
                    isValid = true;

                }
            });




            if (!isValid) {
                $("#validationValue").show();

                $(window).scrollTop($("#valueGroup").offset().top - 100);
                return;
            }


            isValid = false;
            //SET QUALITY ==========================================================================
            $('#qualityGroup input:radio').each(function () {
                if ($(this).prop("checked")) {
                    SurveyObject.QualityRate = $(this).val();
                    if ($(this).val() > 4) { SurveyObject.QualityComment = $("#txtQuality2").val(); }
                    else { SurveyObject.QualityComment = $("#txtQuality1").val(); }
                    isValid = true;
                }
            });
            //if (!isValid) { $("#validationQuality").show(); return; }


                    SurveyObject.RecommendRate = $(this).val();
                    SurveyObject.RecommendImprovements = $("#txtRecommendImprovements").val();
                    SurveyObject.RecommendPoorArea = $("#txtRecommendPoorArea").val();
                    SurveyObject.RecommendSuggestions = $("#txtRecommendSuggestion").val();
